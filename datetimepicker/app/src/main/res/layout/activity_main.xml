<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <Button
        android:id="@+id/dateSpinnerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Picker (Spinner)" />

    <Button
        android:id="@+id/dateCalendarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Picker (Calendar)"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/timeSpinnerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Picker (Spinner)"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/timeClockBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Picker (Clock)"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Values"
        android:textSize="18sp"
        android:layout_marginTop="30dp"/>
</LinearLayout>
